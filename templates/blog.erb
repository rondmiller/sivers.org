<article>
<header>
<div class="blogparent"><%= @parent %>:</div>
<h1><%=h @title %></h1>
<small><%= @date %></small>
</header>

<%= @body %>

<footer>
© <%= @year %> <a href="https://sivers.org/">Derek Sivers</a>.
(
<% if @prev1 %>
	« <a href="/<%= @prev1 %>" accesskey="p" rel="prev">previous</a>
<% end %>
<% if @prev1 && @next1 %>
	||
<% end %>
<% if @next1 %>
	<a href="/<%= @next1 %>" accesskey="n" rel="next">next</a> »
<% end %>
)
<h1>
	Copy &amp; share:
	<a href="https://sivers.org/<%= @url %>">sivers.org/<%= @url %></a>
</h1>
</footer>
</article>
